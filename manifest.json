{
    "manifest_version": 2,
    "name": "share to twitter",
    "version": "0.3",
    "description": "今見ているページを簡単にTwitterへ共有",
    "permissions": [
        "activeTab",
        "contextMenus"
    ],
    "browser_action":
    {
        "default_title": "share to twitter"
    },
    "background":
    {
        "scripts": [ "script.js" ],
        "persistent": true
    },
    "content_scripts": [{
        "matches": ["https://twitter.com/intent/tweet/complete/*"],
        "js": ["content.js"]
    }]
}