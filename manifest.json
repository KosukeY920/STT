{
    "manifest_version": 3,
    "name": "share to twitter",
    "version": "0.8.15",
    "description": "今見ているページを簡単にTwitterへ共有",
    "action": {
            "default_title": "share to twitter"
    },

    "icons": {
        "16": "icons/icon_16px.png",
        "48": "icons/icon_48px.png",
        "128": "icons/icon_128px.png"
    },

    "permissions": [
        "activeTab",
        "contextMenus",
        "tabs"
    ],

    "background": {
        "service_worker": "script.js"
    }
}